<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#dbeef4">
     <TextView 
        android:id="@+id/player_brief_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#339900"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_photo" 
            android:layout_width="90dp"
            android:layout_height="120dp"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView 
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/player_position"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/player_birth"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/player_wheight"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"/>
        <TextView 
            android:id="@+id/player_club"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"/>
        </LinearLayout>
        
    </LinearLayout>
    <TextView 
        android:id="@+id/player_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#339900"/>
    <TextView 
        android:id="@+id/player_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"/>

</LinearLayout>
