<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <TextView
        android:id="@+id/datapoint_label" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#CC0033"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="33dp"
    android:orientation="horizontal" 
    android:gravity="center">
    <View 
        android:layout_width="0.5dip" 
        android:layout_height="33dp" 
        android:background="#FF909090" 
        /> 
    <TextView
        android:id="@+id/datapoint_rank" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="#CC0033"/>
    <View 
        android:layout_width="0.5dip" 
        android:layout_height="33dp" 
        android:background="#FF909090" />
    <TextView
        android:id="@+id/datapoint_name" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"/>
        <View 
        android:layout_width="0.5dip" 
        android:layout_height="33dp" 
        android:background="#FF909090" />
    <TextView
        android:id="@+id/datapoint_session" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"/>
        <View 
        android:layout_width="0.5dip" 
        android:layout_height="33dp" 
        android:background="#FF909090" />
    <TextView
        android:id="@+id/datapoint_win" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"/>
        <View 
        android:layout_width="0.5dip" 
        android:layout_height="33dp" 
        android:background="#FF909090" />
    <TextView
        android:id="@+id/datapoint_tie" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"/>
        <View 
        android:layout_width="0.5dip" 
        android:layout_height="33dp" 
        android:background="#FF909090" />
    <TextView
        android:id="@+id/datapoint_lose" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"/>
        <View 
        android:layout_width="0.5dip" 
        android:layout_height="33dp" 
        android:background="#FF909090" />
    <TextView
        android:id="@+id/datapoint_GD" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"/>
     <View 
        android:layout_width="0.5dip" 
        android:layout_height="33dp" 
        android:background="#FF909090" />
    <TextView
        android:id="@+id/datapoint_point" 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"/>
        <View 
        android:layout_width="0.5dip" 
        android:layout_height="33dp" 
        android:background="#FF909090" />

</LinearLayout>
</LinearLayout>
